<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Car Lease</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/css/font-awesome.min.css" rel="stylesheet" />
    <link href="/css/global.css" rel="stylesheet" />
    <link href="/css/blog.css" rel="stylesheet" />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <script src="/js/bootstrap.bundle.min.js"></script>
  </head>
  <body>
    <div class="main_o clearfix position-relative">
      <div class="main_1 clearfix position-absolute top-0 w-100">
        <section id="header">
          <nav class="navbar navbar-expand-md navbar-light" id="navbar_sticky">
            <div class="container-xl">
              <a class="navbar-brand fs-3 p-0 fw-bold text-white" href="/index"
                ><img
                  src="https://firebasestorage.googleapis.com/v0/b/rent-car-30b65.appspot.com/o/images%2Ffavicon.png?alt=media&token=a47f67b1-774e-44ef-845b-2c8a1594ed4a"
                  alt=""
                  height="30px"
                />
                <br />
              </a>
              <button
                class="navbar-toggler"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent"
                aria-expanded="false"
                aria-label="Toggle navigation"
              >
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mb-0">
                  <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="/index"
                      >Home</a
                    >
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/cars/list">Vehicle Models </a>
                  </li>
                </ul>
                <ul class="navbar-nav mb-0 ms-auto">
                  <% if(!userState) { %>
                  <li class="nav-item">
                    <a class="nav-link" href="/login">Sign In</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link button_2 ms-2 me-2" href="/register"
                      >Register <i class="fa fa-check-circle ms-1"></i
                    ></a>
                  </li>
                  <% } else if(userState === 'user') { %>
                  <li class="nav-item">
                    <a class="nav-link" href="/user"
                      ><%= userGreet.username %></a
                    >
                  </li>
                  <li class="nav-item">
                    <a class="nav-link button_2 ms-2 me-2" href="/logout"
                      >Logout <i class="fa fa-check-circle ms-1"></i
                    ></a>
                  </li>
                  <% } else if(userState === 'admin') { %>
                  <li class="nav-item">
                    <a class="nav-link" href="/admin/home">Hello Admin!</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link button_2 ms-2 me-2" href="/logout"
                      >Logout <i class="fa fa-check-circle ms-1"></i
                    ></a>
                  </li>
                  <% } %>
                </ul>
              </div>
            </div>
          </nav>
        </section>
      </div>
      <div class="main_2 clearfix">
        <section id="center" class="center_dt">
          <div class="center_om clearfix">
            <div class="container-xl">
              <div class="row center_o1">
                <div class="col-md-12">
                  <h2 class="text-white"><%= data.car_model %> Detail</h2>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>
    </div>

    <section id="blog" class="p_3">
      <div class="container-xl">
        <div class="row blog_1">
          <div class="col-md-8">
            <div class="blog_1rdt">
              <div
                id="carouselExampleControls"
                class="carousel slide"
                data-ride="carousel"
              >
                <div class="carousel-inner">
                  <% data.car_img.forEach((item, index) => { %> <% if(index ===
                  0) { %>
                  <div class="carousel-item active">
                    <img class="d-block w-100" src="<%= item %>" alt="Image" />
                  </div>
                  <% } else { %>
                  <div class="carousel-item vert-carousel">
                    <img class="d-block w-100" src="<%= item %>" alt="Image" />
                  </div>
                  <% } %> <% }) %>
                </div>
                <a
                  class="carousel-control-prev"
                  href="#carouselExampleControls"
                  role="button"
                  data-slide="prev"
                >
                  <span
                    class="carousel-control-prev-icon"
                    aria-hidden="true"
                  ></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a
                  class="carousel-control-next"
                  href="#carouselExampleControls"
                  role="button"
                  data-slide="next"
                >
                  <span
                    class="carousel-control-next-icon"
                    aria-hidden="true"
                  ></span>
                  <span class="sr-only">Next</span>
                </a>
              </div>
              <div class="blog_1rdt2">
                <h2 class="mt-3">
                  <%= data.car_brand %> <%= data.car_model %>
                </h2>
                <hr />
                <div style="width: 100%; overflow: auto">
                  <pre class="pre-text"><%= data.car_des %></pre>
                </div>
              </div>
            </div>

            <div class="blog_1rdt3 mt-4 bg_light p-4">
              <div class="blog_1rdt3it row">
                <div class="col-md-12">
                  <h2 class="mb-4">Bình luận:</h2>
                </div>
              </div>
              <div class="blog_1rdt3i row">
                <div class="">
                  <div class="blog_1rdt3il">
                    <% data.car_comment.forEach((item) => { %>
                    <h4 style="display: inline-block; margin-right: 10px">
                      <%= item.postedBy.user_name %>
                    </h4>
                    <h6 class="font_14 mt-3" style="display: inline-block">
                      <p>
                        <i class="fa fa-calendar col_oran me-1"></i> <%=
                        item.created.toISOString().split('T')[0]; %>
                      </p>
                    </h6>
                    <p class="mb-0 font_14"><%= item.text %></p>
                    <hr />

                    <% }) %>
                  </div>
                </div>
              </div>
              <form action="/cars/detail/<%= data._id %>" method="post">
                <div class="blog_1rdt3it row">
                  <div class="col-md-12">
                    <h2 class="mb-4">Gửi bình luận:</h2>
                  </div>
                </div>
                <div class="blog_1rdt3i2 row mt-3">
                  <div class="col-md-12">
                    <div class="blog_1rdt3i2l">
                      <textarea
                        placeholder="Message"
                        class="form-control form_text"
                        name="text"
                      ></textarea>
                      <h6 class="mb-0 mt-3">
                        <button type="submit" class="button">
                          Post Comment <i class="fa fa-check-circle ms-1"></i>
                        </button>
                        <!-- <a class="button" href="#"
                          >Post Comment <i class="fa fa-check-circle ms-1"></i>
                        </a> -->
                      </h6>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
          <div class="col-md-4">
            <div class="blog_1l2 mt-4 p-3 clearfix">
              <h1>Thông tin xe:</h1>
              <hr />
              <h5 class="align-h6">
                <i class="fa fa-industry col_oran me-1"></i> Hãng sản xuất: <%=
                data.car_brand %>
              </h5>
              <h5 class="align-h6">
                <i class="fa fa-car col_oran me-1"></i> Tên xe: <%=
                data.car_model %>
              </h5>
              <h5 class="align-h6">
                <i class="fa fa-filter col_oran me-1"></i> Loại xe: <%=
                data.car_type %>
              </h5>
              <h5 class="align-h6">
                <i class="fa fa-gear col_oran me-1"></i> Kiểu hộp số: <%=
                data.car_gear %>
              </h5>
              <h5 class="align-h6">
                <i class="fa fa-hashtag col_oran me-1"></i> Biển số xe: <%=
                data.car_licensePlate %>
              </h5>
              <h5 class="align-h6">
                <i class="fa fa-calendar col_oran me-1"></i> Năm sản xuất: <%=
                data.car_year %>
              </h5>
              <h5 class="align-h6">
                <i class="fa fa-gears col_oran me-1"></i> Màu xe: <%=
                data.car_color %>
              </h5>
              <h5 class="align-h6">
                <i class="fa fa-male col_oran me-1"></i> Số ghế: <%=
                data.car_seat %>
              </h5>
              <h6 class="mb-0">
                <a class="button book-btn" href="/car/booking/<%= data._id %>"
                  >Book Ride <i class="fa fa-check-circle ms-1"></i>
                </a>
              </h6>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section id="ride">
      <div class="ride_m">
        <div class="container-xl">
          <div class="row ride_1">
            <div class="col-md-8">
              <div class="ride_1l">
                <h1 class="text-white">
                  Tiết kiệm nhiều hơn với <br />
                  dịch vụ của chúng tôi
                </h1>
              </div>
            </div>
            <div class="col-md-4">
              <div class="ride_1r mt-4 text-end">
                <h6 class="mb-0">
                  <a class="button_2" href="/cars/list"
                    >Chọn xe ngay <i class="fa fa-check-circle ms-1"></i>
                  </a>
                </h6>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section id="footer" class="pt-3 pb-3">
      <div class="container-xl">
        <div class="row footer_1">
          <div class="col-md-4">
            <div class="footer_1i">
              <h4>
                <a href="/index"
                  ><img
                    src="https://firebasestorage.googleapis.com/v0/b/rent-car-30b65.appspot.com/o/images%2Flogo_ngang.png?alt=media&amp;token=eb867fee-8c4f-4263-afc9-2ccc695a9007"
                    alt=""
                    height="60px"
                  />
                </a>
              </h4>
              <p class="mt-3">Đừng lái xe, hãy để xe lái bạn!</p>
              <h6 class="mt-3 fw-normal">
                <i class="fa fa-map col_oran me-1"></i> Hapulico 17T4, Thanh
                Xuân, Hà Nội
              </h6>
              <h6 class="mt-3 fw-normal">
                <a href="#"
                  ><i class="fa fa-phone col_oran me-1"></i> (888) 666-8888</a
                >
              </h6>
              <h6 class="mt-3 mb-0 fw-normal">
                <a href="#"
                  ><i class="fa fa-envelope col_oran me-1"></i>
                  admin@4tuuteam.vn</a
                >
              </h6>
            </div>
          </div>
          <div class="col-md-3">
            <div class="footer_1i">
              <h4>THỜI GIAN LÀM VIỆC</h4>
              <p class="mt-3">
                Mon - Fri:
                <span class="fw-bold text-black">09:00AM - 09:00PM</span>
              </p>
              <p class="mt-3">
                Sat: <span class="fw-bold text-black">09:00AM - 06:00PM</span>
              </p>
              <p class="mt-3 mb-0">
                Sun: <span class="fw-bold text-black">Closed</span>
              </p>
            </div>
          </div>
        </div>
        <hr />
        <div class="row footer_2">
          <div class="col-md-8">
            <div class="footer_2l">
              <p class="mb-0 mt-1">
                © 2023 Tứ Tửu Team | Việt Music - Hiếu Bé - Thuấn - Văn
              </p>
            </div>
          </div>
          <div class="col-md-4">
            <div class="footer_2r text-end">
              <ul class="social-network social-circle mb-0">
                <li>
                  <a href="#" class="icoRss" title="Rss"
                    ><i class="fa fa-rss"></i
                  ></a>
                </li>
                <li>
                  <a href="#" class="icoFacebook" title="Facebook"
                    ><i class="fa fa-pinterest"></i
                  ></a>
                </li>
                <li>
                  <a href="#" class="icoTwitter" title="Twitter"
                    ><i class="fa fa-twitter"></i
                  ></a>
                </li>
                <li>
                  <a href="#" class="icoLinkedin" title="Linkedin"
                    ><i class="fa fa-linkedin"></i
                  ></a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <script>
      window.onscroll = function () {
        myFunction();
      };

      var navbar_sticky = document.getElementById("navbar_sticky");
      var sticky = navbar_sticky.offsetTop;
      var navbar_height = document.querySelector(".navbar").offsetHeight;

      function myFunction() {
        if (window.pageYOffset >= sticky + navbar_height) {
          navbar_sticky.classList.add("sticky");
          document.body.style.paddingTop = navbar_height + "px";
        } else {
          navbar_sticky.classList.remove("sticky");
          document.body.style.paddingTop = "0";
        }
      }
    </script>
  </body>
  <script
    src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"
  ></script>
  <script
    src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"
  ></script>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
